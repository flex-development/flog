{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "build",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "**/__mocks__",
    "**/__tests__",
    "**/node_modules",
    "./build",
    "./cjs",
    "./esm",
    "./types"
  ],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
