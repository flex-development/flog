{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "./build",
    "removeComments": false,
    "resolveJsonModule": false,
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": [
    "**/__mocks__",
    "**/__tests__",
    "**/node_modules",
    "./build",
    "./cjs",
    "./esm",
    "./types"
  ],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
