{
  "name": "@flex-development/flog",
  "description": "Simple logging utility",
  "version": "1.0.0",
  "keywords": [
    "log",
    "logging",
    "typescript"
  ],
  "homepage": "https://github.com/flex-development/flog",
  "repository": "git://github.com/flex-development/flog.git",
  "bugs": {
    "url": "https://github.com/flex-development/flog/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "publishConfig": {
    "access": "public",
    "directory": "./build"
  },
  "files": [],
  "main": "./build/esm/index.js",
  "module": "./build/cjs/index.js",
  "types": "./build/esm/index.d.ts",
  "scripts": {
    "clean": "rimraf node_modules",
    "postinstall": "husky-run install",
    "check:format": "prettier --check .",
    "check:style": "eslint . --ext md,js,ts",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "test": "bash ./scripts/jest.sh",
    "build": "dotenv -c production -- ts-node ./scripts/build",
    "prepack": "yarn build",
    "release": "dotenv -c production -- ts-node ./scripts/release"
  },
  "dependencies": {
    "@flex-development/tutils": "3.1.0",
    "@types/chalk": "2.2.0",
    "chalk": "4.1.2",
    "figures": "3.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.14.7",
    "@commitlint/cli": "13.0.0",
    "@commitlint/config-conventional": "13.0.0",
    "@commitlint/format": "13.0.0",
    "@flex-development/grease": "1.0.0",
    "@types/jest": "26.0.23",
    "@types/mvdan-sh": "0.5.0",
    "@types/node": "15.12.5",
    "@types/rimraf": "2.0.4",
    "@types/shelljs": "0.8.9",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "@vercel/ncc": "0.29.2",
    "@zerollup/ts-transform-paths": "1.7.18",
    "dotenv-cli": "4.0.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jsdoc": "36.0.6",
    "eslint-plugin-markdown": "2.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "eslint-plugin-tree-shaking": "1.9.2",
    "husky": "4.3.8",
    "jest": "27.0.6",
    "jest-extended": "0.11.5",
    "jest-github-reporter": "1.0.2",
    "jest-mock-console": "1.1.0",
    "lint-staged": "11.0.0",
    "npm": "7.19.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prettier-plugin-sh": "0.7.0",
    "replace-in-file": "6.2.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.4",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.9.0",
    "ttypescript": "1.5.12",
    "typescript": "4.3.4"
  },
  "peerDependencies": {
    "@types/shelljs": ">=0.8.9",
    "shelljs": ">=0.8.4"
  },
  "peerDependenciesMeta": {
    "@types/shelljs": {
      "optional": true
    },
    "shelljs": {
      "optional": true
    }
  },
  "resolutions": {
    "read-pkg": "5.2.0"
  },
  "engines": {
    "node": ">=15.0.0",
    "yarn": "3.0.1"
  },
  "env": {
    "optional": [
      "DEBUG",
      "DEBUG_COLORS"
    ],
    "required": [
      "PAT_GPR_FLDV"
    ]
  }
}
