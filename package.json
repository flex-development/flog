{
  "name": "@flex-development/log",
  "description": "Style logs for the console or terminal",
  "version": "4.0.1-dev.0",
  "keywords": [
    "log",
    "log-util",
    "logging",
    "typescript"
  ],
  "homepage": "https://github.com/flex-development/log",
  "repository": "git://github.com/flex-development/log.git",
  "bugs": {
    "url": "https://github.com/flex-development/log/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "publishConfig": {
    "access": "public",
    "directory": "./"
  },
  "type": "module",
  "files": [
    "cjs",
    "esm",
    "types",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./esm/log.mjs",
      "require": "./cjs/log.cjs"
    },
    "./*": {
      "import": "./esm/*.mjs",
      "require": "./cjs/*.cjs"
    },
    "./cjs": "./cjs/index.cjs",
    "./cjs/*": "./cjs/*.cjs",
    "./config/*": {
      "import": "./esm/config/*.mjs",
      "require": "./cjs/config/*.cjs"
    },
    "./esm": "./esm/index.mjs",
    "./esm/*": "./esm/*.mjs",
    "./interfaces": {
      "import": "./esm/interfaces/index.mjs",
      "require": "./cjs/interfaces/index.cjs"
    },
    "./interfaces/*": {
      "import": "./esm/interfaces/*.mjs",
      "require": "./cjs/interfaces/*.cjs"
    },
    "./log": {
      "import": "./esm/log.mjs",
      "require": "./cjs/log.cjs"
    },
    "./main": {
      "import": "./esm/main.mjs",
      "require": "./cjs/main.cjs"
    },
    "./package.json": "./package.json",
    "./types": {
      "import": "./esm/types/index.mjs",
      "require": "./cjs/types/index.cjs"
    },
    "./types/*": {
      "import": "./esm/types/*.mjs",
      "require": "./cjs/types/*.cjs"
    },
    "./utils/*": {
      "import": "./esm/utils/*.mjs",
      "require": "./cjs/utils/*.cjs"
    }
  },
  "main": "./cjs/log.min.cjs",
  "module": "./esm/log.min.mjs",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean:build": "rimraf ./(cjs|esm|types|*.tgz)",
    "clean:modules": "rimraf ./node_modules",
    "clean:yarn": "rimraf .yarn/cache .yarn/*.gz",
    "clean": "concurrently \"yarn:clean:*\"",
    "postinstall": "is-ci || chmod +x .husky/* && husky install",
    "check:ci": "yarn check:format && yarn check:style && yarn build --tarball",
    "check:dedupe": "yarn dedupe --check",
    "check:format": "prettier --check .",
    "check:install": "yarn dlx @yarnpkg/doctor .",
    "check:style": "eslint . --ext cjs,cts,md,mjs,mts,ts --max-warnings 0",
    "check:types": "tsc -p tsconfig.spec.json",
    "check:upgrades": "yarn upgrade-interactive",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "test": "bash ./tools/scripts/jest.sh",
    "build": "ts-node ./tools/cli/build-pkg",
    "prepack": "toggle-scripts -postinstall && NODE_ENV=production yarn build",
    "postpack": "toggle-scripts +postinstall",
    "release": "NODE_ENV=production ts-node ./tools/cli/release",
    "prepublishOnly": "toggle-scripts -prepack",
    "postpublish": "toggle-scripts +prepack"
  },
  "dependencies": {
    "@flex-development/tutils": "4.2.1",
    "@types/chalk": "2.2.0",
    "chalk": "4.1.2",
    "figures": "3.2.0",
    "lodash.merge": "4.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@commitlint/types": "13.2.0",
    "@flex-development/grease": "2.0.0",
    "@flex-development/trext": "2.0.1",
    "@jest/globals": "27.3.1",
    "@jest/types": "27.2.5",
    "@log/config": "link:src/config",
    "@log/enums": "link:src/enums",
    "@log/interfaces": "link:src/interfaces",
    "@log/types": "link:src/types",
    "@log/utils": "link:src/utils",
    "@tests/fixtures": "link:__tests__/__fixtures__",
    "@tests/utils": "link:__tests__/utils",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/lodash.merge": "4.6.6",
    "@types/mvdan-sh": "0.5.1",
    "@types/node": "16.0.0",
    "@types/resolve": "1.20.1",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.9",
    "@types/yargs": "17.0.5",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "@vates/toggle-scripts": "1.0.0",
    "@vercel/ncc": "0.31.1",
    "ansi-styles": "6.1.0",
    "comment-json": "4.1.1",
    "concurrently": "6.3.0",
    "dotenv": "10.0.0",
    "dotenv-expand": "5.1.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-jsdoc": "37.0.3",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-markdownlint": "0.2.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "eslint-plugin-tree-shaking": "1.9.2",
    "eslint-plugin-unicorn": "37.0.1",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.3.1",
    "jest-extended": "1.1.0",
    "jest-github-reporter": "1.0.2",
    "jest-mock-console": "1.2.3",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "prettier-plugin-sh": "0.7.1",
    "read-pkg": "7.0.0",
    "replace-in-file": "6.3.2",
    "resolve-tspaths": "0.1.2",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "tsc-prog": "2.2.1",
    "tsconfig": "7.0.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.5.0-beta",
    "yargs": "17.2.1"
  },
  "optionalDependencies": {
    "@types/shelljs": "0.8.9",
    "shelljs": "0.8.4"
  },
  "peerDependencies": {
    "@types/node": ">=14.0.0",
    "typescript": "4.5.0-beta"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.18.0",
    "yarn": "3.0.2"
  },
  "env": {
    "optional": [],
    "required": []
  },
  "packageManager": "yarn@3.0.2"
}
