{
  "name": "@flex-development/log",
  "description": "Style logs for the console or terminal",
  "version": "2.0.0",
  "keywords": [
    "log",
    "log-util",
    "logging",
    "typescript"
  ],
  "homepage": "https://github.com/flex-development/log",
  "repository": "git://github.com/flex-development/log.git",
  "bugs": {
    "url": "https://github.com/flex-development/log/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "publishConfig": {
    "access": "public",
    "directory": "./"
  },
  "files": [
    "cjs",
    "esm",
    "types",
    "CHANGELOG.md"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean:build": "rimraf ./(cjs|esm|types)",
    "clean:modules": "rimraf ./node_modules",
    "clean:yarn": "rimraf .yarn/cache .yarn/*.gz",
    "clean": "concurrently \"yarn:clean:*\"",
    "postinstall": "is-ci || husky-run install",
    "check:dedupe": "yarn dedupe --check",
    "check:format": "prettier --check .",
    "check:install": "yarn dlx @yarnpkg/doctor .",
    "check:style": "eslint . --ext md,js,ts",
    "check:upgrades": "yarn upgrade-interactive",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "test": "bash ./tools/scripts/jest.sh",
    "build": "ts-node ./tools/cli/build",
    "prepack": "yarn build",
    "release": "ts-node ./tools/cli/release",
    "prepublishOnly": "toggle-scripts -postinstall && toggle-scripts -prepack",
    "postpublish": "toggle-scripts +postinstall && toggle-scripts +prepack"
  },
  "dependencies": {
    "@flex-development/tutils": "3.1.7",
    "@types/chalk": "2.2.0",
    "chalk": "4.1.2",
    "figures": "3.2.0",
    "lodash.merge": "4.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/eslint-parser": "7.15.7",
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@commitlint/format": "13.2.0",
    "@commitlint/types": "13.2.0",
    "@flex-development/grease": "2.0.0",
    "@jest/types": "27.2.4",
    "@log/config": "link:src/config",
    "@log/enums": "link:src/enums",
    "@log/interfaces": "link:src/interfaces",
    "@log/types": "link:src/types",
    "@log/utils": "link:src/utils",
    "@tests/fixtures": "link:__tests__/__fixtures__",
    "@tests/utils": "link:__tests__/utils",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/lodash.join": "4.0.6",
    "@types/lodash.merge": "4.6.6",
    "@types/lodash.omit": "4.5.6",
    "@types/lodash.pick": "4.4.6",
    "@types/mvdan-sh": "0.5.1",
    "@types/node": "16.10.2",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.9",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "@vates/toggle-scripts": "1.0.0",
    "@zerollup/ts-transform-paths": "1.7.18",
    "ansi-styles": "4.3.0",
    "concurrently": "6.2.2",
    "dotenv-cli": "4.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.5.0",
    "eslint-plugin-jsdoc": "36.1.0",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "eslint-plugin-tree-shaking": "1.9.2",
    "eslint-plugin-unicorn": "36.0.0",
    "fs-extra": "10.0.0",
    "husky": "4.3.8",
    "is-ci": "3.0.0",
    "jest": "27.2.4",
    "jest-extended": "0.11.5",
    "jest-github-reporter": "1.0.2",
    "jest-mock-console": "1.2.3",
    "lint-staged": "11.1.2",
    "lodash.join": "4.0.1",
    "lodash.omit": "4.5.0",
    "lodash.pick": "4.4.0",
    "prettier": "2.4.1",
    "prettier-plugin-sh": "0.7.1",
    "read-pkg": "5.2.0",
    "replace-in-file": "6.2.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "ttypescript": "1.5.12",
    "typescript": "4.4.3",
    "yargs": "17.2.1"
  },
  "peerDependencies": {
    "@types/shelljs": ">=0.8.9",
    "shelljs": ">=0.8.4",
    "typescript": ">=2.7"
  },
  "peerDependenciesMeta": {
    "@types/shelljs": {
      "optional": true
    },
    "shelljs": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=15.0.0",
    "yarn": "3.0.2"
  },
  "env": {
    "optional": [],
    "required": []
  },
  "packageManager": "yarn@3.0.2"
}
