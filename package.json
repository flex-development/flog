{
  "name": "@flex-development/log",
  "description": "Style logs for the console or terminal",
  "version": "1.0.1",
  "keywords": [
    "log",
    "log-util",
    "logging",
    "typescript"
  ],
  "homepage": "https://github.com/flex-development/log",
  "repository": "git://github.com/flex-development/log.git",
  "bugs": {
    "url": "https://github.com/flex-development/log/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "publishConfig": {
    "access": "public",
    "directory": "./"
  },
  "files": [
    "cjs",
    "docs",
    "esm",
    "types",
    "CHANGELOG.md"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean:build": "rimraf ./(cjs|esm|types)",
    "clean": "rimraf node_modules",
    "postinstall": "is-ci || husky-run install",
    "check:format": "prettier --check .",
    "check:style": "eslint . --ext md,js,ts",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "test": "bash ./scripts/jest.sh",
    "build": "dotenv -c production -- ts-node ./scripts/build",
    "prepack": "pinst -d && yarn build",
    "postpack": "pinst -e",
    "release": "dotenv -c production -- ts-node ./scripts/release"
  },
  "dependencies": {
    "@flex-development/tutils": "3.1.7",
    "@types/chalk": "2.2.0",
    "chalk": "4.1.2",
    "figures": "3.2.0",
    "lodash.merge": "4.6.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.15.4",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@commitlint/format": "13.1.0",
    "@flex-development/grease": "1.1.0",
    "@types/fs-extra": "9.0.12",
    "@types/jest": "27.0.1",
    "@types/lodash.merge": "4.6.6",
    "@types/mvdan-sh": "0.5.0",
    "@types/node": "16.9.1",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.9",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "@zerollup/ts-transform-paths": "1.7.18",
    "copyfiles": "2.4.1",
    "dotenv-cli": "4.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-jsdoc": "36.1.0",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "eslint-plugin-tree-shaking": "1.9.2",
    "fs-extra": "10.0.0",
    "husky": "4.3.8",
    "is-ci": "3.0.0",
    "jest": "27.2.0",
    "jest-extended": "0.11.5",
    "jest-github-reporter": "1.0.2",
    "jest-mock-console": "1.1.0",
    "lint-staged": "11.1.2",
    "npm": "7.23.0",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.4.0",
    "prettier-plugin-sh": "0.7.1",
    "replace-in-file": "6.2.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "ttypescript": "1.5.12",
    "typescript": "4.4.2"
  },
  "peerDependencies": {
    "@types/shelljs": ">=0.8.9",
    "shelljs": ">=0.8.4"
  },
  "peerDependenciesMeta": {
    "@types/shelljs": {
      "optional": true
    },
    "shelljs": {
      "optional": true
    }
  },
  "resolutions": {
    "read-pkg": "5.2.0"
  },
  "engines": {
    "node": ">=15.0.0",
    "yarn": "3.0.2"
  },
  "env": {
    "optional": [
      "DEBUG",
      "DEBUG_COLORS"
    ],
    "required": [
      "NPM_TOKEN_FLDV",
      "PAT_GPR_FLDV"
    ]
  },
  "packageManager": "yarn@3.0.2"
}
